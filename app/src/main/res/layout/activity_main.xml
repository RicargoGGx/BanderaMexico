<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Primer tercio de la bandera (green) -->
    <View
        android:id="@+id/green"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/white"
        android:background="@color/green" />

    <!-- Segundo tercio de la bandera (white) -->
    <View
        android:id="@+id/white"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_centerInParent="true"
        android:background="@color/white"/>

    <ImageView
        android:id="@+id/centeredImageView"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_centerInParent="true"
        android:src="@drawable/escudoMexico" />

    <!-- Tercer tercio de la bandera (red) -->
    <View
        android:id="@+id/red"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/white"
        android:background="@color/red" />

</RelativeLayout>
